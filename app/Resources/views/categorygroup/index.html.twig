{% extends 'default/base.html.twig' %}

{% block page %}

  <div class="container">
    <div class="row">
      <div class="page-section">
        <h2>Category groups list</h2>

        <table class="table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Default category</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            {% for categoryGroup in categoryGroups %}
            <tr>
              <td>{{ categoryGroup.name }}</td>
              <td>{{ categoryGroup.defaultCategory.name }}</td>
              <td>
                <ul class="list-inline">
                  <li><a href="{{ path('categorygroup_show', { 'id': categoryGroup.id }) }}">show</a></li>
                  <li><a href="{{ path('categorygroup_edit', { 'id': categoryGroup.id }) }}">edit</a></li>
                </ul>
              </td>
            </tr>
            {% endfor %}
          </tbody>
        </table>

        <a class="form-button btn btn-primary btn-lg btn-block" href="{{ path('categorygroup_new') }}">Create a new category group</a>
      </div>
    </div>
  </div>

{% endblock %}
