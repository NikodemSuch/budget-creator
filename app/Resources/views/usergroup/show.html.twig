{% extends 'base.html.twig' %}

{% block body %}
    <h1>Usergroup</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ userGroup.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ userGroup.name }}</td>
            </tr>
            <tr>
                <th>Isdefaultgroup</th>
                <td>{% if userGroup.isDefaultGroup %}Yes{% else %}No{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('usergroup_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('usergroup_edit', { 'id': userGroup.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
