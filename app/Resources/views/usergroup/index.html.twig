{% extends 'base.html.twig' %}

{% block body %}
    <h1>Usergroups list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Isdefaultgroup</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for userGroup in userGroups %}
            <tr>
                <td><a href="{{ path('usergroup_show', { 'id': userGroup.id }) }}">{{ userGroup.id }}</a></td>
                <td>{{ userGroup.name }}</td>
                <td>{% if userGroup.isDefaultGroup %}Yes{% else %}No{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('usergroup_show', { 'id': userGroup.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('usergroup_edit', { 'id': userGroup.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('usergroup_new') }}">Create a new userGroup</a>
        </li>
    </ul>
{% endblock %}
