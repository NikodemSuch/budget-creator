{% extends 'Default/base.html.twig' %}

{% block page %}

  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="page-section">

          <h2>Account Data</h2>

          <table class="table">
            <tbody>
              <tr>
                <th>Id:</th>
                <td>{{ account.id }}</td>
              </tr>
              <tr>
                <th>Name:</th>
                <td>{{ account.name }}</td>
              </tr>
              <tr>
                <th>Balance:</th>
                <td>{{ account_balance|money }}</td>
              </tr>
              <tr>
                <th>Currency:</th>
                <td>{{ account.currency }}</td>
              </tr>
              <tr>
                <th>Owner:</th>
                <td>{{ account.owner }}</td>
              </tr>
            </tbody>
          </table>

          {% include 'Default/formErrors.html.twig' %}

          <a class="form-button btn btn-primary btn-lg btn-block" href="{{ path('account_edit', { 'id': account.id }) }}">Edit</a>
          {{ form_start(delete_form) }}
            <button class="form-button btn btn-primary btn-lg btn-block" type="submit">Delete</button>
          {{ form_end(delete_form) }}
          <a href="{{ path('account_index') }}">Back to the list</a>

        </div>
      </div>
    </div>

    {% include 'Transaction/list.html.twig' %}

  </div>

{% endblock %}
