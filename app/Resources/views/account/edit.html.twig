{% extends 'account/base.html.twig' %}

{% block pageContent %}

  <div class="row">
    <div class="form-container col-sm-6 col-sm-offset-3">

      <div class="form-header">
        <h2 class="form-title">Account edit</h2>
      </div>

      {{ form_start(edit_form) }}
        {{ form_widget(edit_form) }}
        <button class="form-button btn btn-primary btn-lg btn-block" type="submit">Edit</button>
      {{ form_end(edit_form) }}

      <div class="form-footer">
        {{ form_start(delete_form) }}
          <button class="form-button btn btn-primary btn-lg btn-block" type="submit">Delete</button>
        {{ form_end(delete_form) }}
        <p><a href="{{ path('account_index') }}">Back to the list</a></p>
      </div>

    </div>
  </div>

{% endblock %}
