{% extends 'default/base.html.twig' %}

{% block page %}

  <div class="container">
    <div class="row">
      <div class="page-section">
        <h1>List of your accounts:</h1>
        <h1>Total Balance: {{ totalBalance|money() }}</h1>

        {% for accountData in accountsData %}
          <div class="col-sm-4 col-md-3">
            <a class="item-index" href="{{ path('account_show', { 'id': accountData.0.id }) }}">
              <p>{{ accountData.0.name }}</p>
              <p>{{ accountData.1|money() }} {{ accountData.0.currency }} </p>
            </a>
          </div>
        {% endfor %}

        <div class="col-sm-4 col-md-3">
          <a class="item-index" href="{{ path('account_new') }}"><p>Create new account...</p></a>
        </div>

      </div>
    </div>
  </div>

{% endblock %}
