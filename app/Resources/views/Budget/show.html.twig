{% extends 'Default/base.html.twig' %}

{% block page %}

  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="page-section">

          {% if budget_exists is defined and budget_exists == false %}
            <div class="error-container">
              <div class="alert alert-info" role="alert">
                <p class="text-highlight">Budget no longer exists.</p>
              </div>
            </div>
          {% else %}

            <h2>Budget Data</h2>

            <table class="table">
              <tbody>
                <tr>
                  <th>Id:</th>
                  <td>{{ budget.id }}</td>
                </tr>
                <tr>
                  <th>Name:</th>
                  <td>{{ budget.name }}</td>
                </tr>
                <tr>
                  <th>Balance:</th>
                  <td>{{ budget_balance|money }}</td>
                </tr>
                <tr>
                  <th>Currency:</th>
                  <td>{{ budget.currency }}</td>
                </tr>
                <tr>
                  <th>Owner</th>
                  <td>{{ budget.owner }}</td>
                </tr>
              </tbody>
            </table>

            {% include 'Default/flashes.html.twig' %}

            <a class="form-button btn btn-primary btn-lg btn-block" href="{{ path('budget_edit', { 'id': budget.id }) }}">Edit</a>
            <a class="form-button btn btn-primary btn-lg btn-block delete-url" href="{{ path('budget_delete', { 'id': budget.id }) }}">Delete</a>
            <a href="{{ path('budget_index') }}">Back to the list</a>

          {% endif %}

        </div>
      </div>
    </div>

    {% if budget_exists is not defined or budget_exists == true %}
      {% include 'Transaction/list.html.twig' %}
    {% endif %}

  </div>

{% endblock %}
