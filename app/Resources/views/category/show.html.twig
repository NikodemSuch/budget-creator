{% extends 'default/base.html.twig' %}

{% block page %}

  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="page-section">
          <h2>Category</h2>

          <table class="table">
            <tbody>
              <tr>
                <th>Id:</th>
                <td>{{ category.id }}</td>
              </tr>
              <tr>
                <th>Name:</th>
                <td>{{ category.name }}</td>
              </tr>
              <tr>
                <th>Category group:</th>
                <td>{{ category.group.name }}</td>
              </tr>
            </tbody>
          </table>

          {% include 'default/formErrors.html.twig' %}

          <a class="form-button btn btn-primary btn-lg btn-block" href="{{ path('category_edit', { 'id': category.id }) }}">Edit</a>

          {% if category.group.defaultCategory.id != category.id %}

            {% if display_delete_form %}
              {{ form_start(delete_form) }}
                <button class="form-button btn btn-primary btn-lg btn-block" type="submit">Delete</button>
              {{ form_end(delete_form) }}
            {% else %}
              <div class="alert alert-info" role="alert">
                <strong>Category is in use.</strong>
              </div>
            {% endif %}

          {% endif %}

          <a href="{{ path('category_index') }}">Back to the list</a>

        </div>
      </div>
    </div>
  </div>

{% endblock %}
