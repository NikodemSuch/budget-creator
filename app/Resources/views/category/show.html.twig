{% extends 'default/base.html.twig' %}

{% block page %}

  <div class="container">
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
        <div class="page-section">
          <h2>Category</h2>

          <table class="table">
            <tbody>
              <tr>
                <th>Id:</th>
                <td>{{ category.id }}</td>
              </tr>
              <tr>
                <th>Name:</th>
                <td>{{ category.name }}</td>
              </tr>
              <tr>
                <th>Category group:</th>
                <td>{{ category.group.name }}</td>
              </tr>
            </tbody>
          </table>

          <div class="form-errors">
            {% for label, messages in app.flashes %}
              {% for message in messages %}
                <div class="alert alert-danger flash-{{ label }}" role="alert">
                  {{ message }}
                </div>
              {% endfor %}
            {% endfor %}
          </div>

          <a class="form-button btn btn-primary btn-lg btn-block" href="{{ path('category_edit', { 'id': category.id }) }}">Edit</a>
          {{ form_start(delete_form) }}
            <button class="form-button btn btn-primary btn-lg btn-block" type="submit">Delete</button>
          {{ form_end(delete_form) }}
          <a href="{{ path('category_index') }}">Back to the list</a>

        </div>
      </div>
    </div>
  </div>

{% endblock %}
