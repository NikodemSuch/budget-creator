{% extends 'default/base.html.twig' %}

{% block page %}

  <div class="container">
    <div class="row">
      <div class="page-section">
        <h1>List of your budgets:</h1>

        {% if totalBalance %}
          <h1>Total Balance: {{ totalBalance|money(app.request.getLocale()) }}</h1>
        {% endif %}

        {% for budgetData in budgetsData %}
          <div class="col-sm-4 col-md-3">
            <a class="item-index" href="{{ path('budget_show', { 'id': budgetData.0.id }) }}">
              {{ budgetData.0.name }}</br>
              {{ budgetData.1|money(app.request.getLocale()) }} {{ budgetData.0.currency }}
            </a>
          </div>
        {% endfor %}

        <div class="col-sm-4 col-md-3">
          <p><a class="item-index" href="{{ path('budget_new') }}">Create new budget...</a></p>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
