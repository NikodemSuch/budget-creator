{% extends 'default/base.html.twig' %}

{% block page %}

  <div class="container">
    <div class="row">
      <div class="page-section">
        <h1>List of your budgets:</h1>

        {% for budget_data in budgets_data %}
          <div class="col-sm-4 col-md-3">
            <a class="item-index" href="{{ path('budget_show', { 'id': budget_data.0.id }) }}">
              {{ budget_data.0.name }}</br>
              {{ budget_data.1|money }} {{ budget_data.0.currency }}
            </a>
          </div>
        {% endfor %}

        <div class="col-sm-4 col-md-3">
          <p><a class="item-index" href="{{ path('budget_new') }}">Create new budget...</a></p>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
