{% extends 'default/base.html.twig' %}

{% block page %}

  <div class="container">
    <div class="row">
      <div class="page-section">
        <h1>List of your budgets:</h1>

        {% for budget in budgets %}
          <div class="col-sm-4 col-md-3">
            <a class="item-index" href="{{ path('budget_show', { 'id': budget.id }) }}">{{ budget.name }}</a>
          </div>
        {% endfor %}

        <div class="col-sm-4 col-md-3">
          <a class="item-index" href="{{ path('budget_new') }}">Create new budget...</a>
        </div>
      </div>
    </div>
  </div>

{% endblock %}
